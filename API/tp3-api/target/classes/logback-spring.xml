<configuration>

    <property name="LOG_DIR" value="/var/log/app"/>

    <!-- Console classique pour voir ce qu'il se passe dans IntelliJ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Fichier JSON pour lâ€™API -->
    <appender name="API_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/api.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/api-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Logs JSON + console pour les controllers -->
    <logger name="com.example.tp3restructuring.controller" level="INFO" additivity="false">
        <appender-ref ref="API_JSON"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root : au minimum la console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
